<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2e9ff"
    tools:context=".activity.BloodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6B97D4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="身體狀況管理"/>

        <ImageView
            android:id="@+id/iv_activity_blood_report"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:src="@drawable/report"
            android:contentDescription="description"/>


    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="血壓:(舒張壓/收縮壓)"
        android:textColor="#000"
        android:textSize="18sp"/>
    <EditText

        android:layout_marginLeft="10dp"
        android:id="@+id/et_activity_blood_blood_pressure"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="#FFF"
        android:textColor="#000"
        tools:ignore="Autofill,LabelFor" />
    <TextView
        android:id="@+id/abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="/"
        android:textColor="#000"
        android:textSize="24sp"
        >
    </TextView>
    <EditText
        android:id="@+id/et_activity_blood_blood_pressure_2"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="#FFF"
        android:textColor="#000"
        tools:ignore="Autofill,LabelFor" />


</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一筆記錄為:132/98"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000"
            ></TextView>
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="輸入"
           android:layout_alignParentRight="true"
            ></Button>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="血糖:"
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
        android:id="@+id/et_activity_blood_blood_sugar"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
        android:inputType="number"
       android:textColor="#000"
            android:background="#FFF"
        tools:ignore="Autofill,LabelFor" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一筆記錄為:96"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000"
            ></TextView>
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="輸入"
            android:layout_alignParentRight="true"
            ></Button>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="體重:"
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/et_activity_blood_weight"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:inputType="number"
            android:textColor="#000"
            tools:ignore="Autofill,LabelFor" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一筆記錄為:52kg"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="#000"
            ></TextView>
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="輸入"
            android:layout_alignParentRight="true"
            ></Button>

    </RelativeLayout>













    <Button
        android:id="@+id/bt_activity_blood_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"/>
</LinearLayout>